pipeline {
  agent any

  parameters {
    string(name: 'WORKFLOW_ID', defaultValue: '', description: 'Workflow ID from n8n-dev')
  }

  environment {
    DEV_CONTAINER  = 'n8n-dev-n8n-dev-1'
    PROD_CONTAINER = 'n8n-prod-n8n-prod-1'
  }

  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Promote') {
      steps {
        sh '''
          set -e
          chmod +x scripts/promote-workflow.sh
          scripts/promote-workflow.sh "${WORKFLOW_ID}"
        '''
      }
    }
  }
}
